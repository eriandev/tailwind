{
  "name": "tailwind-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "serve public",
    "dev": "run-p start css:watch",
    "build": "run-s format css:build minify:js",
    "format": "prettier --write ./**/*.{html,css,js}",
    "minify:js": "terser src/*.js -c -m toplevel -o public/app.js",
    "css:watch": "postcss src/app.css -o public/app.css -w",
    "css:build": "cross-env NODE_ENV=production postcss src/app.css -o public/app.css"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "cssnano": "5.1.12",
    "npm-run-all": "4.1.5",
    "postcss-cli": "10.0.0",
    "postcss-preset-env": "7.7.2",
    "prettier": "2.7.1",
    "serve": "14.0.1",
    "tailwindcss": "3.1.6",
    "terser": "5.14.2"
  }
}
